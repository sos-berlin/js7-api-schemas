{
	"title": "PlansFilter",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"javaType": "com.sos.joc.model.plan.PlansFilter",
	"type": "object",
	"required": [
        "controllerId"
    ],
    "properties": {
        "controllerId": {
            "$ref": "../common/controllerIdRequired-schema.json"
        },
        "planSchemaIds": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "planSchemaId-schema.json"
            }
        },
        "planKeys": {
            "description": "Will be ignored for global schema bacause it has no plan keys",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "../common/string255-schema.json"
            }
        },
        "onlyOpenPlans": {
            "type": "boolean",
            "default": false   
        },
        "onlyClosedPlans": {
            "type": "boolean",
            "default": false   
        }
    },
    "additionalProperties": false
}