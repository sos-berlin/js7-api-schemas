{
	"title": "GitCredentials",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"javaType": "com.sos.joc.model.publish.git.GitCredentials",
	"type": "object",
	"anyOf": [{
			"required": ["gitAccount", "password", "gitServer"]
		}, {
			"required": ["gitAccount", "personalAccessToken", "gitServer"]
		}, {
			"required": ["gitAccount", "keyfilePath", "gitServer"]
		}],
	"properties": {
		"gitAccount": {
			"$ref": "../../common/string100-schema.json"
		},
		"keyfilePath": {
      "description": "path or filename of a private Key. Empty filename possible.",
      "type": "string",
      "pattern": "^[a-zA-Z]:?([\\|[^/\\<>?:\"\n,!|*]][^/\\<>?:\"\n,!|*]+)+\\?$|^([/|[^/\\<>?:\"\n,!|*]][^/\\<>?:\"\n,!|*]+)+$",
      "maxLength": 255
		},
		"password": {
			"type": "string"
		},
		"personalAccessToken": {
			"$ref": "../../common/string100-schema.json"
		},
		"gitServer": {
			"$ref": "../../common/string255-schema.json"
		}
	}
}
