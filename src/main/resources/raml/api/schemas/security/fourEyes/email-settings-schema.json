 
{
	"title": "Approval Email Settings",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"javaType": "com.sos.joc.model.security.foureyes.EmailSettings",
	"type": "object",
	"required": [
	    "body",
	    "subject"
	],
	"properties": {
		"body": {
			"$ref": "../../common/noScript-schema.json"
		},
		"subject": {
			"$ref": "../../common/noScript-schema.json"
		},
		"cc": {
			"$ref": "../../common/noScript-schema.json"
		},
		"bcc": {
			"$ref": "../../common/noScript-schema.json"
		},
		"contentType": {
			"type": "string",
            "pattern": "^[^<>]*$",
            "maxLength": 255,
            "minLength": 1,
            "default": "text/html"
		},
		"charset": {
			"type": "string",
            "pattern": "^[^<>]*$",
            "maxLength": 255,
            "minLength": 1,
            "default": "ISO-8859-1"
		},
		"encoding": {
			"type": "string",
            "pattern": "^[^<>]*$",
            "maxLength": 255,
            "minLength": 1,
            "default": "7bit"
		},
		"priority": {
			"type": "string",
			"javaType": "com.sos.joc.model.security.foureyes.EmailPriority",
			"enum": [
			     "HIGHEST",
                 "HIGH",
			     "NORMAL",
			     "LOW",
			     "LOWEST"
			],
            "default": "NORMAL"
		},
		"jobResourceName": {
			"type": "string",
            "pattern": "^[^<>]*$",
            "maxLength": 255,
            "minLength": 1,
            "default": "eMailDefault"
		}
	},
	"additionalProperties": false
}
    