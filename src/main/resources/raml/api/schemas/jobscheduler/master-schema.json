{
  "title": "JobScheduler Controller",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.joc.model.jobscheduler.Controller",
  "type": "object",
  "required": [
        "id",
        "controllerId",
        "title",
        "url",
    	"role",
    	"isCoupled"
  ],
  "properties": {
    "id": {
      "$ref": "../common/nonNegativeLong-schema.json"
    },
    "surveyDate": {
      "$ref": "../common/timestamp-schema.json"
    },
    "controllerId": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "host": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "clusterUrl": {
      "type": "string"
    },
    "role": {
      "$ref": "role-schema.json"
    },
    "isCoupled": {
      "type": "boolean",
      "default": false
    },
    "startedAt": {
      "$ref": "../common/timestamp-schema.json"
    },
    "version": {
      "type": "string"
    },
    "os": {
      "$ref": "os-schema.json"
    },
    "securityLevel": {
      "$ref": "../common/jocSecurityLevel-schema.json"
    },
    "componentState": {
      "$ref": "componentState-schema.json"
    },
    "connectionState": {
      "$ref": "connectionState-schema.json"
    },
    "clusterNodeState": {
      "$ref": "clusterNodeState-schema.json"
    }
  }
}
