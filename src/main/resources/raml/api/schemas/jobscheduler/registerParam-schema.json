{
  "title": "register params",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.joc.model.jobscheduler.RegisterParameters",
  "type": "object",
  "required": [
    "controllers"
  ],
  "properties": {
    "controllerId": {
      "$ref": "../common/filename100-schema.json"
    },
    "controllers": {
      "type": "array",
      "minItems": 1,
      "maxItems": 2,
      "items": {
        "type" : "object",
        "javaType": "com.sos.joc.model.jobscheduler.RegisterParameter",
        "required": [
          "url",
          "role"
        ],
        "properties": {
          "id": {
            "$ref": "../common/nonNegativeLong-schema.json"
          },
          "title": {
            "type": "string"
          },
          "url": {
            "$ref": "../common/uri-schema.json"
          },
          "clusterUrl": {
            "$ref": "../common/uri-schema.json"
          },
          "role": {
            "javaType": "com.sos.joc.model.jobscheduler.Role",
            "type": "string",
            "enum": [
    	      "STANDALONE",
    	      "PRIMARY",
    	      "BACKUP"
  	        ]
          }
        }
      }
    },
    "clusterWatcher": {
    	"$ref": "../agent/agent-schema.json"
    },
    "agents": {
    	"type": "array",
    	"minItems": 1,
    	"items": {
    		"$ref": "../agent/agent-schema.json"
    	}
    },
    "auditLog": {
      "$ref": "../audit/auditParams-schema.json"
    }
  }
}
